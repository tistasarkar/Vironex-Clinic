<main>
  <section class="section" data-aos="fade-up">
    <div class="container">
      <div class="title">Book Appointment</div>
      <div class="card" style="max-width:720px;margin:auto">
        <form id="appointForm" aria-label="Appointment form">
          <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px">
            <div>
              <label class="small" for="pname">Full name</label>
              <input id="pname" name="name" placeholder="Full name" required style="padding:10px;border-radius:8px;width:100%"/>
            </div>
            <div>
              <label class="small" for="pemail">Email</label>
              <input id="pemail" name="email" placeholder="Email" required style="padding:10px;border-radius:8px;width:100%"/>
            </div>
          </div>
          <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;margin-top:10px">
            <div>
              <label class="small" for="pphone">Phone</label>
              <input id="pphone" name="phone" placeholder="Phone" required style="padding:10px;border-radius:8px;width:100%"/>
            </div>
            <div>
              <label class="small" for="pdate">Date</label>
              <input id="pdate" type="date" name="date" required style="padding:10px;border-radius:8px;width:100%"/>
            </div>
          </div>
          <label class="small" for="pdept" style="margin-top:10px;display:block">Department</label>
          <select id="pdept" name="department" style="margin-top:4px;padding:10px;border-radius:8px;width:100%">
            <option>Choose Department</option>
            <option>Cardiology</option>
            <option>Dermatology</option>
            <option>Pediatrics</option>
          </select>
          <label class="small" for="pnotes" style="margin-top:10px;display:block">Notes (optional)</label>
          <textarea id="pnotes" name="notes" placeholder="Any additional notes..." style="margin-top:4px;padding:10px;border-radius:8px;width:100%;height:100px"></textarea>
          <div style="margin-top:12px">
            <button class="btn" type="submit">Confirm Booking</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

